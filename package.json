{
  "name": "@camacho/node-repository-template",
  "version": "0.0.0-semantically-released",
  "description": "A repository template for Node projects",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10.16",
    "yarn": ">=1.16"
  },
  "repository": "git@github.com:camacho/node-repository-template",
  "author": "Patrick Camacho <patrick@daftdevelopers.com>",
  "keywords": [],
  "bin": "build/entrypoint.js",
  "main": "build/lib/index.js",
  "files": [
    "build",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "build": "ncc build src/index.ts -o build",
    "postbuild": "chmod +x build/index.js",
    "clean": "rm -rf build/*",
    "commit": "git-cz",
    "dev": "ncc run src/index.ts",
    "format": "npm-run-all format-*",
    "format-package": "format-package \"package.json\" \"!**/__fixtures__/**\" --write",
    "format-source": "prettier \"**/**{yml,md,js,json,ts}\" --write",
    "gamut": "npm-run-all format lint type-check test build",
    "lint": "eslint . --color --ext .ts",
    "prepbuild": "yarn clean",
    "prerelease": "yarn build",
    "release": "semantic-release",
    "reset": "yarn clean && rm -rf node_modules",
    "start": "./build/index.js",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "watch": "ncc build src/index.ts -o build -w"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-merge": "install-deps-postmerge",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{yml,md,js,json}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "format-package -w",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  },
  "dependencies": {
    "convict": "^5.1.0",
    "dotenv": "^8.1.0",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@jedmao/semantic-release-npm-github-config": "^1.0.7",
    "@types/convict": "^4.2.1",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "@zeit/ncc": "^0.20.5",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-watch": "6.0.1",
    "format-package": "^5.2.0",
    "husky": "^3.0.7",
    "install-deps-postmerge": "^1.0.5",
    "jest": "^24.9.0",
    "jest-mock-console": "^1.0.0",
    "jest-snapshot-serializer-ansi": "1.0.0",
    "jest-validate": "^24.9.0",
    "jest-watch-master": "^1.0.0",
    "jest-watch-typeahead": "^0.4.0",
    "lint-staged": "^9.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.24",
    "temp-dir": "^2.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "uuid4": "^1.1.4"
  }
}
