{
  "name": "@camacho/node-repository-template",
  "version": "0.0.0-semantically-released",
  "description": "A repository template for Node projects",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10.16",
    "yarn": ">=1.16"
  },
  "repository": "git@github.com:camacho/node-repository-template",
  "author": "Patrick Camacho <patrick@daftdevelopers.com>",
  "keywords": [],
  "bin": "build/entrypoint.js",
  "main": "build/lib/index.js",
  "files": [
    "build",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "prebuild": "yarn run clean-build",
    "build": "tsc",
    "clean": "npm-run-all clean-build clean-packages",
    "clean-build": "rimraf ./build",
    "clean-packages": "rimraf ./node_modules",
    "commit": "git-cz",
    "dev": "ts-node-dev --respawn --transpileOnly entrypoint.ts",
    "format": "npm-run-all format-package format-source",
    "format-package": "format-package -w",
    "format-source": "prettier \"**/**{md,js,json,ts}\" --write",
    "gamut": "npm-run-all reset format lint type-check test build",
    "lint": "eslint . --ext .ts,.tsx",
    "prepublishOnly": "yarn run gamut",
    "reset": "yarn run clean && yarn install",
    "start": "./entrypoint.sh",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-merge": "install-deps-postmerge",
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{md,js,json}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "format-package -w",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFilesAfterEnv": [
      "jest-extended",
      "<rootDir>/scripts/jest-setup.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      ".ts": "ts-jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname",
      "jest-watch-master"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            "build/**",
            "entrypoint.sh",
            "package.json",
            "yarn.lock",
            "README.md",
            "CHANGELOG.md",
            "LICENSE"
          ]
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "dependencies": {
    "convict": "^5.1.0",
    "dotenv": "^8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/convict": "^4.2.1",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.14.0",
    "format-package": "^5.1.0",
    "husky": "^3.0.1",
    "install-deps-postmerge": "^1.0.5",
    "jest": "^24.8.0",
    "jest-extended": "^0.11.2",
    "jest-mock-console": "^1.0.0",
    "jest-validate": "^24.8.0",
    "jest-watch-master": "^1.0.0",
    "jest-watch-typeahead": "^0.3.1",
    "lint-staged": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.18",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.5.3"
  }
}
