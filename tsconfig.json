{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2018"
  },
  "exclude": [
    "tests/**",
    "**/__fixtures__/**",
    "**/__mocks__/**",
    "**/**.test.ts",
    "node_modules",
    "build"
  ],
  "include": ["src", "src/**/*.json"]
}
