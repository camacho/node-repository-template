{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2018"],
    "module": "commonjs",
    "esModuleInterop": true,
    "types": ["node"],
    "outDir": "build",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "declaration": false,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "test",
    "__fixtures__",
    "__snapshots__"
  ],
  "include": ["src"]
}
