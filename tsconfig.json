{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2018",
    "types": ["node", "jest"]
  },
  "exclude": [
    "**/__tests__/**",
    "**/__fixtures__/**",
    "**/__mocks__/**",
    "**/**.test.**"
  ],
  "include": ["src"]
}
